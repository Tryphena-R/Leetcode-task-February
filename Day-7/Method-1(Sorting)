class Solution {
    public int[] sortedSquares(int[] nums) {
        int[]result= new int[nums.length];
        for(int i=0;i<nums.length;i++){
            if(nums[i]<0){
                nums[i]= Math.abs(nums[i]);
            }
        }
        Arrays.sort(nums);
        for(int i=0;i<nums.length;i++){
            result[i]= nums[i]*nums[i];
        }
        return result;
    }
}
