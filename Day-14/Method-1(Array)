class Solution {
    public List<Boolean> kidsWithCandies(int[] candies, int extraCandies) {
        List<Boolean> great = new ArrayList<>();
        int max= 0;
        for(int num:candies){
            if(num>max){
                max= num;
            }
        }
        for(int cand:candies){
            if(cand+extraCandies<max){
                great.add(false);
            }else{
                great.add(true);
            }
        }
        return great;
    }
}
